    xmlns:viewmodels="clr-namespace:Diploma.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ProfileViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

